<Window x:Class="PsychiatricHospitalWPF.Views.Patients.PatientsListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список пациентов" 
        Height="600" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <TextBlock Text="Управление пациентами" 
                      FontSize="18" 
                      FontWeight="Bold" 
                      Foreground="White"/>
        </Border>

        <!-- панель инструментов -->
        <Border Grid.Row="1" Background="#f5f5f5" Padding="10" BorderBrush="#ddd" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- поиск и фильтры -->
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Label Content="Статус:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cmbStatus" 
                             Width="150" 
                             VerticalAlignment="Center"
                             Height="30"
                             Padding="5">
                        <ComboBoxItem Content="Все"/>
                        <ComboBoxItem Content="На лечении" IsSelected="True"/>
                        <ComboBoxItem Content="Выписаны"/>
                    </ComboBox>

                    <!-- расширенный поиск -->
                    <Button x:Name="btnAdvancedSearch" 
                           Content="🔍 Расширенный поиск" 
                           Click="BtnAdvancedSearch_Click"
                           Background="#9C27B0"
                           Foreground="White"
                           Margin="15,0,0,0"
                           Padding="12,6"/>

                    <TextBox x:Name="txtSearch" 
                            Width="200" 
                            Margin="15,0,0,0"
                            VerticalAlignment="Center"
                            Height="30"
                            Padding="5"
                            VerticalContentAlignment="Center"/>

                    <Button x:Name="btnSearch" 
                           Content="🔍 Быстрый поиск" 
                           Background="#2196F3"
                           Foreground="White"
                           Margin="5,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" 
                           Grid.Column="1" 
                           HorizontalAlignment="Right">
                    <Button x:Name="btnAddPatient" 
                           Content="➕ Добавить пациента" 
                           Background="#4CAF50"
                           Foreground="White"/>

                    <Button x:Name="btnRefresh" 
                           Content="🔄 Обновить" 
                           Background="#FF9800"
                           Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <DataGrid x:Name="dgPatients" 
                 Grid.Row="2"
                 AutoGenerateColumns="False"
                 IsReadOnly="True"
                 SelectionMode="Single"
                 RowHeight="35"
                 AlternatingRowBackground="#f9f9f9"
                 GridLinesVisibility="Horizontal"
                 HeadersVisibility="Column"
                 CanUserResizeRows="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="№ Карты" 
                                   Binding="{Binding CardNumber}" 
                                   Width="120"/>

                <DataGridTextColumn Header="ФИО" 
                                   Binding="{Binding FullName}" 
                                   Width="180"/>

                <DataGridTextColumn Header="Дата рождения (возраст)" 
                                   Binding="{Binding BirthDateWithAge}" 
                                   Width="180"/>

                <DataGridTextColumn Header="Диагноз" 
                   Binding="{Binding Diagnosis}" 
                   Width="180"/>

                <DataGridTextColumn Header="Палата" 
                                   Binding="{Binding WardNumber}" 
                                   Width="70"/>

                <DataGridTextColumn Header="Поступление" 
                                   Binding="{Binding AdmissionDate, StringFormat='dd.MM.yyyy'}" 
                                   Width="100"/>

                <DataGridTextColumn Header="Статус" 
                                   Binding="{Binding StatusDisplay}" 
                                   Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="active">
                                    <Setter Property="Foreground" Value="Green"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="discharged">
                                    <Setter Property="Foreground" Value="Gray"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Header="Действия" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="📋" 
                                       Click="BtnOpenMedCard_Click"
                                       Padding="5,2"
                                       Width="30"
                                       Background="#03A9F4"
                                       Foreground="White"
                                       BorderThickness="0"
                                       ToolTip="Медкарта"
                                       Margin="0,0,5,0"/>

                                <!-- назначения -->
                                <Button Content="💊" 
                                    Tag="{Binding PatientId}"
                                    Click="BtnPrescriptions_Click"
                                    Background="#9C27B0"
                                    Foreground="White"
                                    Padding="5,2"
                                    Width="30"
                                    Margin="0,0,5,0"
                                    ToolTip="Назначения"/>

                                <Button Content="📤" 
                                       Click="BtnDischargePatient_Click"
                                       Padding="5,2"
                                       Width="30"
                                       Background="#f44336"
                                       Foreground="White"
                                       BorderThickness="0"
                                       ToolTip="Выписать"
                                       Margin="0,0,5,0">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="discharged">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="3" Background="#f5f5f5" Padding="10" BorderBrush="#ddd" BorderThickness="0,1,0,0">
            <TextBlock x:Name="lblInfo" Text="Всего пациентов: 0" FontSize="12"/>
        </Border>
        
    </Grid>
</Window>
