<Window x:Class="PsychiatricHospitalWPF.Views.Patients.PatientsListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список пациентов" 
        Height="650" Width="1250"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- шапка -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <TextBlock Text="Управление пациентами" 
                      FontSize="18" 
                      FontWeight="Bold" 
                      Foreground="White"/>
        </Border>

        <!-- единая панель фильтров и поиска -->
        <Border Grid.Row="1" Background="#e8f5e9" Padding="12" BorderBrush="#ddd" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- строка 1: статус + кнопки -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- заголовок секции -->
                    <Label Grid.Column="0"
                           Content="🔍 Фильтры и поиск:" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold"
                           FontSize="14"
                           Foreground="#2E7D32"
                           Padding="0,0,10,0"/>

                    <!-- фильтр статуса -->
                    <StackPanel Grid.Column="1" 
                               Orientation="Horizontal"
                               VerticalAlignment="Center">
                        <Label Content="Статус:" 
                               VerticalAlignment="Center" 
                               FontWeight="SemiBold"
                               Padding="5,0"/>
                        <ComboBox x:Name="cmbStatus" 
                                 Width="150" 
                                 VerticalAlignment="Center"
                                 Height="30"
                                 Padding="7">
                            <ComboBoxItem Content="Все"/>
                            <ComboBoxItem Content="На лечении" IsSelected="True"/>
                            <ComboBoxItem Content="Выписаны"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- кнопки действий -->
                    <StackPanel Grid.Column="2" 
                               Orientation="Horizontal" 
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center">
                        <Button x:Name="btnAddPatient" 
                               Content="➕ Добавить пациента" 
                               Background="#4CAF50"
                               Foreground="White"
                               Height="30"/>

                        <Button x:Name="btnRefresh" 
                               Content="🔄 Обновить" 
                               Background="#FF9800"
                               Foreground="White"
                               Height="30"/>
                    </StackPanel>
                </Grid>

                <!-- строка 2: поля поиска -->
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <!-- поиск по ФИО -->
                    <StackPanel Margin="0,0,8,0">
                        <Label Content="По ФИО:" FontSize="10" Padding="2" Foreground="Gray"/>
                        <TextBox x:Name="txtSearchName" 
                                Width="160" 
                                Height="28"
                                Padding="5"
                                VerticalContentAlignment="Center"
                                ToolTip="Введите ФИО пациента (например: Иванов, Петр)"/>
                    </StackPanel>

                    <!-- поиск по номеру карты -->
                    <StackPanel Margin="0,0,8,0">
                        <Label Content="По № карты:" FontSize="10" Padding="2" Foreground="Gray"/>
                        <TextBox x:Name="txtSearchCard" 
                                Width="120" 
                                Height="28"
                                Padding="5"
                                VerticalContentAlignment="Center"
                                ToolTip="Введите номер медицинской карты"/>
                    </StackPanel>

                    <!-- поиск по диагнозу -->
                    <StackPanel Margin="0,0,8,0">
                        <Label Content="По диагнозу:" FontSize="10" Padding="2" Foreground="Gray"/>
                        <TextBox x:Name="txtSearchDiagnosis" 
                                Width="140" 
                                Height="28"
                                Padding="5"
                                VerticalContentAlignment="Center"
                                ToolTip="Введите диагноз"/>
                    </StackPanel>

                    <!-- фильтр по палате -->
                    <StackPanel Margin="0,0,8,0">
                        <Label Content="По палате:" FontSize="10" Padding="2" Foreground="Gray"/>
                        <ComboBox x:Name="cmbWardFilter" 
                                 Width="140" 
                                 Height="28"
                                 Padding="5"
                                 ToolTip="Выберите палату">
                            <ComboBoxItem Content="Все палаты" IsSelected="True"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- кнопка очистки -->
                    <StackPanel Margin="0,0,0,0">
                        <Label Content=" " FontSize="10" Padding="2" Visibility="Hidden"/>
                        <Button x:Name="btnClearSearch" 
                               Content="✖ Очистить" 
                               Background="#757575"
                               Foreground="White"
                               Padding="10,5"
                               Height="28"
                               ToolTip="Очистить все поля поиска"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- таблица пациентов -->
        <DataGrid x:Name="dgPatients" 
                 Grid.Row="2"
                 AutoGenerateColumns="False"
                 IsReadOnly="True"
                 SelectionMode="Single"
                 RowHeight="35"
                 AlternatingRowBackground="#f9f9f9"
                 GridLinesVisibility="Horizontal"
                 HeadersVisibility="Column"
                 CanUserResizeRows="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="№ Карты" 
                                   Binding="{Binding CardNumber}" 
                                   Width="120"/>

                <DataGridTextColumn Header="ФИО" 
                                   Binding="{Binding FullName}" 
                                   Width="180"/>

                <DataGridTextColumn Header="Дата рождения (возраст)" 
                                   Binding="{Binding BirthDateWithAge}" 
                                   Width="180"/>

                <DataGridTextColumn Header="Диагноз" 
                   Binding="{Binding Diagnosis}" 
                   Width="*"
                   MinWidth="150"/>

                <DataGridTextColumn Header="Палата" 
                                   Binding="{Binding WardNumber}" 
                                   Width="80"/>

                <DataGridTextColumn Header="Поступление" 
                                   Binding="{Binding AdmissionDate, StringFormat='dd.MM.yyyy'}" 
                                   Width="100"/>

                <DataGridTextColumn Header="Статус" 
                                   Binding="{Binding StatusDisplay}" 
                                   Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="active">
                                    <Setter Property="Foreground" Value="Green"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="discharged">
                                    <Setter Property="Foreground" Value="Gray"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Header="Действия" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="📋" 
                                       Click="BtnOpenMedCard_Click"
                                       Padding="5,2"
                                       Width="30"
                                       Background="#03A9F4"
                                       Foreground="White"
                                       BorderThickness="0"
                                       ToolTip="Медкарта"
                                       Margin="0,0,5,0"/>

                                <!-- назначения -->
                                <Button Content="💊" 
                                    Tag="{Binding PatientId}"
                                    Click="BtnPrescriptions_Click"
                                    Background="#9C27B0"
                                    Foreground="White"
                                    Padding="5,2"
                                    Width="30"
                                    Margin="0,0,5,0"
                                    ToolTip="Назначения"/>

                                <Button Content="📤" 
                                       Click="BtnDischargePatient_Click"
                                       Padding="5,2"
                                       Width="30"
                                       Background="#f44336"
                                       Foreground="White"
                                       BorderThickness="0"
                                       ToolTip="Выписать"
                                       Margin="0,0,5,0">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="discharged">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- статусная строка -->
        <Border Grid.Row="3" Background="#f5f5f5" Padding="10" BorderBrush="#ddd" BorderThickness="0,1,0,0">
            <Grid>
                <TextBlock x:Name="lblInfo" 
                          Text="Всего пациентов: 0" 
                          FontSize="12"
                          FontWeight="SemiBold"
                          HorizontalAlignment="Left"/>

                <TextBlock x:Name="lblSearchInfo" 
                          Text="" 
                          FontSize="11"
                          Foreground="#1976D2"
                          FontStyle="Italic"
                          HorizontalAlignment="Right"/>
            </Grid>
        </Border>

    </Grid>
</Window>
