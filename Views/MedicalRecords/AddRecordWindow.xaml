<Window x:Class="PsychiatricHospitalWPF.Views.MedicalRecords.AddRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Добавление медицинской записи" 
        Height="750" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- шапка -->
        <Border Grid.Row="0" Background="#673AB7" Padding="15">
            <StackPanel>
                <TextBlock Text="Новая медицинская запись" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock x:Name="txtPatientName" 
                          Text="" 
                          FontSize="12" 
                          Foreground="White"
                          Opacity="0.9"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- форма -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- дата -->
                <Label Content="Дата записи:" FontWeight="SemiBold"/>
                <DatePicker x:Name="dpRecordDate" 
                           Padding="8" 
                           Height="35"
                           Margin="0,0,0,15"
                           DisplayDateEnd="{x:Static sys:DateTime.Now}"/>

                <!-- время -->
                <Label Content="Время (HH:mm):" FontWeight="SemiBold"/>
                <TextBox x:Name="txtRecordTime" 
                        Padding="10" 
                        Height="35"
                        Margin="0,0,0,5"
                        TextChanged="TxtRecordTime_TextChanged"/>
                <TextBlock x:Name="lblTimeHint" 
                          Text="Например: 14:30"
                          FontSize="11"
                          Foreground="Gray"
                          Margin="5,0,0,15"/>

                <!-- тип записи -->
                <Label Content="Тип записи:" FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbRecordType" 
                         Padding="8" 
                         Height="35"
                         Margin="0,0,0,5">
                    <ComboBoxItem Content="👨‍⚕️ Осмотр" IsSelected="True" Tag="осмотр"/>
                    <ComboBoxItem Content="💬 Консультация" Tag="консультация"/>
                    <ComboBoxItem Content="📊 Изменение состояния" Tag="изменение_состояния"/>
                    <ComboBoxItem Content="🔬 Анализы" Tag="анализы"/>
                </ComboBox>
                <TextBlock Text="Выберите тип медицинской записи"
                          FontSize="11"
                          Foreground="Gray"
                          Margin="5,2,0,15"/>

                <!-- описание -->
                <Label Content="Описание состояния / Заключение:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtDescription" 
                        Padding="10" 
                        Height="100"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"
                        Margin="0,0,0,5"
                        TextChanged="TxtDescription_TextChanged"/>

                <!-- счетчик символов -->
                <StackPanel Orientation="Horizontal" Margin="5,0,0,10">
                    <TextBlock x:Name="lblCharCount" 
                              Text="Символов: 0 (минимум 10)"
                              FontSize="11"/>
                </StackPanel>

                <!-- подсказки -->
                <Border Background="#E8F5E9" 
                       BorderBrush="#4CAF50" 
                       BorderThickness="1"
                       Padding="10"
                       Margin="0,5,0,0">
                    <StackPanel>
                        <TextBlock Text="💡 Рекомендации:" 
                                  FontWeight="SemiBold"
                                  Foreground="#2E7D32"/>
                        <TextBlock Margin="15,5,0,0" TextWrapping="Wrap">
                            <Run Text="• Осмотр:" FontWeight="SemiBold"/>
                            <Run Text="общее состояние, жалобы, объективные данные" Foreground="Gray"/>
                        </TextBlock>
                        <TextBlock Margin="15,2,0,0" TextWrapping="Wrap">
                            <Run Text="• Консультация:" FontWeight="SemiBold"/>
                            <Run Text="заключение специалиста, рекомендации" Foreground="Gray"/>
                        </TextBlock>
                        <TextBlock Margin="15,2,0,0" TextWrapping="Wrap">
                            <Run Text="• Изменение состояния:" FontWeight="SemiBold"/>
                            <Run Text="динамика, улучшение/ухудшение" Foreground="Gray"/>
                        </TextBlock>
                        <TextBlock Margin="15,2,0,0" TextWrapping="Wrap">
                            <Run Text="• Анализы:" FontWeight="SemiBold"/>
                            <Run Text="результаты исследований" Foreground="Gray"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- кнопки -->
        <Border Grid.Row="2" Background="#f5f5f5" Padding="15" BorderBrush="#ddd" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="lblError" 
                          Grid.Column="0"
                          Text=""
                          Foreground="Red"
                          VerticalAlignment="Center"
                          TextWrapping="Wrap"
                          Visibility="Collapsed"/>

                <Button x:Name="btnSave" 
                       Content="✓ Сохранить" 
                       Grid.Column="1"
                       Click="BtnSave_Click"
                       Background="#4CAF50"
                       Foreground="White"
                       Padding="20,8"
                       Margin="5,0"/>

                <Button x:Name="btnCancel" 
                       Content="✗ Отмена" 
                       Grid.Column="2"
                       Click="BtnCancel_Click"
                       Background="#757575"
                       Foreground="White"
                       Padding="20,8"
                       Margin="5,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
