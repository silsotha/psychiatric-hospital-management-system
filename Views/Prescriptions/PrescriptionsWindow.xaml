<Window x:Class="PsychiatricHospitalWPF.Views.Prescriptions.PrescriptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Назначения пациента" 
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Шапка -->
        <Border Grid.Row="0" Background="#673AB7" Padding="15">
            <StackPanel>
                <TextBlock Text="Назначения пациента" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock x:Name="txtPatientInfo" 
                          Text="" 
                          FontSize="12" 
                          Foreground="White"
                          Opacity="0.9"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Панель кнопок и фильтров -->
        <Border Grid.Row="1" Background="#f5f5f5" Padding="10" BorderBrush="#ddd" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="btnAddPrescription" 
                           Content="➕ Новое назначение" 
                           Click="BtnAddPrescription_Click"
                           Background="#4CAF50"
                           Foreground="White"
                           Padding="12,6"
                           Margin="0,0,5,0"
                           Cursor="Hand"/>
                    
                    <Button x:Name="btnRefresh" 
                           Content="🔄 Обновить" 
                           Click="BtnRefresh_Click"
                           Background="#FF9800"
                           Foreground="White"
                           Padding="12,6"
                           Margin="0,0,5,0"
                           Cursor="Hand"/>
                </StackPanel>
                
                <!-- Фильтр по статусу -->
                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <Label Content="Показать:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cmbStatusFilter" 
                             Width="150"
                             VerticalAlignment="Center"
                             SelectionChanged="CmbStatusFilter_SelectionChanged">
                        <ComboBoxItem Content="Все" IsSelected="True"/>
                        <ComboBoxItem Content="🟢 Активные"/>
                        <ComboBoxItem Content="✅ Завершенные"/>
                        <ComboBoxItem Content="❌ Отмененные"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Список назначений -->
        <DataGrid x:Name="dgPrescriptions" 
                 Grid.Row="2"
                 AutoGenerateColumns="False"
                 IsReadOnly="True"
                 SelectionMode="Single"
                 RowHeight="50"
                 AlternatingRowBackground="#f9f9f9"
                 SelectionChanged="DgPrescriptions_SelectionChanged"
                 LoadingRow="DgPrescriptions_LoadingRow">

            <DataGrid.Columns>
                <!-- Иконка статуса и типа -->
                <DataGridTemplateColumn Header="Статус" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding StatusIcon}" FontSize="16" Margin="0,0,3,0"/>
                                <TextBlock Text="{Binding TypeIcon}" FontSize="16"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <!-- Название -->
                <DataGridTextColumn Header="Название" 
                                   Binding="{Binding FullName}" 
                                   Width="250"/>
                
                <!-- Периодичность -->
                <DataGridTextColumn Header="Периодичность" 
                                   Binding="{Binding Frequency}" 
                                   Width="200"/>
                
                <!-- Период действия -->
                <DataGridTextColumn Header="Период" 
                                   Binding="{Binding PeriodDisplay}" 
                                   Width="150"/>
                
                <!-- Осталось дней -->
                <DataGridTextColumn Header="Осталось" 
                                   Binding="{Binding DaysLeftDisplay}" 
                                   Width="80"/>
                
                <!-- Врач -->
                <DataGridTextColumn Header="Врач" 
                                   Binding="{Binding DoctorName}" 
                                   Width="150"/>
                
                <!-- Действия -->
                <DataGridTemplateColumn Header="Действия" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" x:Name="actionButtons">
                                <Button Content="✓ Выполнено" 
                                       Tag="{Binding PrescriptionId}"
                                       Click="BtnExecute_Click"
                                       Background="#2196F3"
                                       Foreground="White"
                                       Padding="8,4"
                                       Margin="2"
                                       Cursor="Hand"/>

                                <Button Content="❌ Отменить" 
                                       Tag="{Binding PrescriptionId}"
                                       Click="BtnCancel_Click"
                                       Background="#f44336"
                                       Foreground="White"
                                       Padding="8,4"
                                       Margin="2"
                                       Cursor="Hand"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Детали назначения -->
        <Border Grid.Row="3"
        Background="#f9f9f9"
        Padding="15"
        BorderBrush="#ddd"
        BorderThickness="0,1,0,0">

            <Grid>

                <!-- ===== Детали назначения ===== -->
                <StackPanel x:Name="panelDetails" Visibility="Collapsed">
                    <TextBlock Text="Детали назначения" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="txtDetailType" Text="" Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtDetailFrequency" Text="" Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtDetailDuration" Text="" Margin="0,0,0,5"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock x:Name="txtDetailCreated" Text="" Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtDetailDoctor" Text="" Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtDetailExecutions" Text="" Margin="0,0,0,5"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock x:Name="txtDetailNotes" 
                          Margin="0,10,0,0"
                          TextWrapping="Wrap"
                          Foreground="Gray"
                          Visibility="Collapsed"/>
                </StackPanel>

                <!-- ===== Сообщение, если ничего не выбрано ===== -->
                <TextBlock x:Name="txtNoSelection"
                   Text="Выберите назначение для просмотра деталей"
                   Foreground="Gray"
                   FontStyle="Italic"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
