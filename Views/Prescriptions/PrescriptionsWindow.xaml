<Window x:Class="PsychiatricHospitalWPF.Views.Prescriptions.PrescriptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Назначения пациента" 
        Height="700" Width="1250"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- шапка -->
        <Border Grid.Row="0" Background="#673AB7" Padding="15">
            <StackPanel>
                <TextBlock Text="Назначения пациента" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock x:Name="txtPatientInfo" 
                          Text="" 
                          FontSize="12" 
                          Foreground="White"
                          Opacity="0.9"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- панель кнопок и фильтров -->
        <Border Grid.Row="1" Background="#f5f5f5" Padding="10" BorderBrush="#ddd" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="btnAddPrescription" 
                           Content="➕ Новое назначение" 
                           Click="BtnAddPrescription_Click"
                           Background="#4CAF50"
                           Foreground="White"
                           Padding="12,6"
                           Margin="0,0,5,0"
                           Cursor="Hand"/>
                    
                    <Button x:Name="btnRefresh" 
                           Content="🔄 Обновить" 
                           Click="BtnRefresh_Click"
                           Background="#FF9800"
                           Foreground="White"
                           Padding="12,6"
                           Margin="0,0,5,0"
                           Cursor="Hand"/>
                </StackPanel>
                
                <!-- фильтр по статусу -->
                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <Label Content="Показать:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cmbStatusFilter" 
                             Width="150"
                             VerticalAlignment="Center"
                             SelectionChanged="CmbStatusFilter_SelectionChanged">
                        <ComboBoxItem Content="Все" IsSelected="True"/>
                        <ComboBoxItem Content="Активные"/>
                        <ComboBoxItem Content="Завершенные"/>
                        <ComboBoxItem Content="Отмененные"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- список назначений -->
        <DataGrid x:Name="dgPrescriptions" 
                 Grid.Row="2"
                 AutoGenerateColumns="False"
                 IsReadOnly="True"
                 SelectionMode="Single"
                 RowHeight="50"
                 AlternatingRowBackground="#f9f9f9"
                 SelectionChanged="DgPrescriptions_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Статус" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- статус назначения -->
                                <Ellipse Width="14" Height="14" 
                        Fill="{Binding StatusBrush, Mode=OneWay}"
                        ToolTip="{Binding StatusDisplay, Mode=OneWay}"
                        Margin="0,0,5,0"/>

                                <!-- иконка типа -->
                                <TextBlock Text="{Binding TypeIcon}" FontSize="16" Padding="8"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- название -->
                <DataGridTextColumn Header="Название" 
                                   Binding="{Binding FullName}" 
                                   Width="200"/>
                
                <!-- периодичность -->
                <DataGridTextColumn Header="Периодичность" 
                                   Binding="{Binding Frequency}" 
                                   Width="200"/>
                
                <!-- период действия -->
                <DataGridTextColumn Header="Период" 
                                   Binding="{Binding PeriodDisplay}" 
                                   Width="150"/>

                <!-- следующий приём -->
                <DataGridTemplateColumn Header="Следующий приём" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- индикатор выполнения -->
                                <Ellipse Width="16" Height="16" 
                        Fill="{Binding ExecutionStatusBrush, Mode=OneWay}"
                        ToolTip="{Binding ExecutionStatusText, Mode=OneWay}"
                        Margin="0,0,8,0"/>

                                <!-- текст времени приёма -->
                                <TextBlock Text="{Binding ExecutionStatusText, Mode=OneWay}"
                          FontSize="11"
                          FontWeight="SemiBold"
                          VerticalAlignment="Center"
                          Foreground="{Binding ExecutionStatusBrush, Mode=OneWay}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- осталось дней -->
                <DataGridTextColumn Header="Осталось" 
                                   Binding="{Binding DaysLeftDisplay}" 
                                   Width="100"/>
                
                <!-- врач -->
                <DataGridTextColumn Header="Врач" 
                                   Binding="{Binding DoctorName}" 
                                   Width="150"/>
                
                <!-- действия -->
                <DataGridTemplateColumn Header="Действия" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="✓ Выполнено" 
                                       Tag="{Binding PrescriptionId}"
                                       Click="BtnExecute_Click"
                                       Background="#2196F3"
                                       Foreground="White"
                                       Padding="8,4"
                                       Margin="2"
                                       Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="IsEnabled" Value="True"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Завершено">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Отменено">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Content="❌ Отменить" 
                                       Tag="{Binding PrescriptionId}"
                                       Click="BtnCancel_Click"
                                       Background="#f44336"
                                       Foreground="White"
                                       Padding="8,4"
                                       Margin="2"
                                       Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="IsEnabled" Value="True"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Завершено">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Отменено">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- детали назначения -->
        <Border Grid.Row="3"
        Background="#f9f9f9"
        Padding="15"
        BorderBrush="#ddd"
        BorderThickness="0,1,0,0">

            <Grid>
                <StackPanel x:Name="panelDetails" Visibility="Collapsed">
                    <Border x:Name="pnlCancelInfo"
                            Background="#FFEBEE"
                            BorderBrush="#f44336"
                            BorderThickness="1"
                            Padding="10"
                            Margin="0,10,0,0"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock x:Name="txtCancelInfo"
                            Text=""
                            TextWrapping="Wrap"
                            Foreground="#c62828"
                            FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                    
                    <TextBlock Text="Детали назначения" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="txtDetailType" Text="" Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtDetailFrequency" Text="" Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtDetailDuration" Text="" Margin="0,0,0,5"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock x:Name="txtDetailCreated" Text="" Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtDetailDoctor" Text="" Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtDetailExecutions" Text="" Margin="0,0,0,5"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock x:Name="txtDetailNotes" 
                          Margin="0,10,0,0"
                          TextWrapping="Wrap"
                          Foreground="Gray"
                          Visibility="Collapsed"/>
                </StackPanel>

                <!-- сообщение, если ничего не выбрано -->
                <TextBlock x:Name="txtNoSelection"
                   Text="Выберите назначение для просмотра деталей"
                   Foreground="Gray"
                   FontStyle="Italic"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
