<Window x:Class="PsychiatricHospitalWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система управления психиатрической больницей" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- шапка -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Система управления психиатрической больницей" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="White"
                          VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- информация о пользователе -->
                    <TextBlock x:Name="lblUserInfo"
                              Text="Пользователь"
                              Foreground="White"
                              FontSize="12"
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"/>

                    <Button x:Name="btnLogout" 
                           Content="🚪 Выход" 
                           Click="BtnLogout_Click"
                           Background="#f44336"
                           Foreground="White"
                           Padding="15,8"
                           BorderThickness="0"
                           Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- главное меню -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- панель быстрого доступа -->
            <Border Grid.Row="0" Background="#f5f5f5" Padding="15" BorderBrush="#ddd" BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="btnPatients" 
                           Content="👥 Список пациентов" 
                           Click="BtnPatients_Click"
                           Background="#4CAF50"
                           Foreground="White"
                           Padding="12,10"
                           Margin="0,0,10,0"
                           FontSize="14"
                           BorderThickness="0"
                           Cursor="Hand"/>

                    <Button x:Name="btnWards" 
                           Content="🏥 Управление палатами" 
                           Click="BtnWards_Click"
                           Background="#2196F3"
                           Foreground="White"
                           Padding="20,10"
                           Margin="0,0,10,0"
                           FontSize="14"
                           BorderThickness="0"
                           Cursor="Hand"/>

                    <Button x:Name="btnReports" 
                           Content="📊 Отчеты" 
                           Click="BtnReports_Click"
                           Background="#FF9800"
                           Foreground="White"
                           Padding="20,10"
                           FontSize="14"
                           BorderThickness="0"
                           Cursor="Hand"/>
                </StackPanel>
            </Border>

            <!-- приветственная панель -->
            <Grid Grid.Row="1">
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           MaxWidth="600">

                    <Image Source="/Images/logo.png"
                    Width="80"
                    Height="80"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20"/>

                    <TextBlock Text="Добро пожаловать!" 
                              FontSize="32"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,15"/>

                    <TextBlock Text="Система управления психиатрической больницей" 
                              FontSize="18"
                              Foreground="Gray"
                              HorizontalAlignment="Center"
                              TextAlignment="Center"
                              Margin="0,0,0,30"/>

                    <Border Background="#E3F2FD" 
                           BorderBrush="#2196F3" 
                           BorderThickness="1"
                           Padding="20"
                           CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Быстрый доступ:" 
                                      FontWeight="SemiBold"
                                      FontSize="16"
                                      Margin="0,0,0,10"/>

                            <TextBlock Margin="10,5,0,0">
                                <Run Text="• Управление пациентами" FontWeight="SemiBold"/>
                                <Run Text=" - регистрация, поиск, медицинские карты" Foreground="Gray"/>
                            </TextBlock>

                            <TextBlock Margin="10,5,0,0">
                                <Run Text="• Палаты" FontWeight="SemiBold"/>
                                <Run Text=" - управление размещением пациентов" Foreground="Gray"/>
                            </TextBlock>

                            <TextBlock Margin="10,5,0,0">
                                <Run Text="• Отчеты" FontWeight="SemiBold"/>
                                <Run Text=" - статистика и аналитика" Foreground="Gray"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Выберите нужный раздел в меню выше" 
                              FontSize="14"
                              Foreground="Gray"
                              HorizontalAlignment="Center"
                              Margin="0,30,0,0"
                              FontStyle="Italic"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- нижняя панель (статус бар) -->
        <Border Grid.Row="2" Background="#263238" Padding="10">
            <Grid>
                <TextBlock Text="© 2025-2026 Система управления психиатрической больницей" 
                          Foreground="White"
                          FontSize="11"
                          VerticalAlignment="Center"/>

                <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='dd.MM.yyyy HH:mm'}"
                          xmlns:sys="clr-namespace:System;assembly=mscorlib"
                          Foreground="White"
                          FontSize="11"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
